@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app">
    <div class="sidebar">
        <div class="header">
            <h5>Chat Rooms</h5>
            <a href="#" id="create-room" data-toggle="modal" data-target="#create-room-modal">
                <i class="fas fa-plus"></i>
            </a>
        </div>
        <ul class="rooms list-unstyled" id="room-list">
            <li>
                <a href="#">Nghiên cứu MAUI</a>
            </li>
            <li>
                <a href="#">Tổ công tác cuối năm</a>
            </li>
        </ul>
        <div class="profile">
            <div>
                <img src="/images/icons/avatar1.png" class="user-avatar" />
                <a>Tên đăng nhập</a>
            </div>
            <form class="form-inline">
                <button type="submit" class="btn-sign-out">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </div>
    </div>

    @* Nếu chưa vào room nào *@

    @*<div class="main-content">
        <span class="m-auto">
            Please select room to join!
        </span>
    </div>*@

    @* Đã vào room *@
    <div class="main-content">
        <div class="header">
            <h5 id="joinedRoom">Room 1</h5>
            <div class="room-actions">
                <button type="button" class="btn btn-link text-secondary px-1" data-toggle="modal" data-target="#rename-room-modal"><i class="fas fa-edit"></i></button>
                <button type="button" class="btn btn-link text-secondary px-1" data-toggle="modal" data-target="#remove-room-modal"><i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="chat-body">
            <ul class="list-unstyled">
                <li>
                    @* có 2 phần là avatar và nội dung chat *@
                    <div class="chat-message d-flex">
                        <div class="left-side">
                            <img src="~/images/icons/avatar1.png" class="message-avatar" />
                        </div>
                        <div class="message-content d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <span class="author">Tác giả</span>
                                <span class="time-stamp">
                                    <i class="far fa-clock"></i>
                                    <span>10:50</span>
                                </span>
                            </div>
                            <span class="content">
                                Nôi dung chat
                            </span>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="chat-input">
            <input id="chat-message" type="text" value="" placeholder="What's on your mind?" />
            <div class="actions d-flex align-items-center">
                @* tại đây cần bắn api upload *@
                <form method="post" id="uploadForm">
                    <label for="UploadedFile" class="custom-file-upload"><i class="far fa-image"></i></label>
                    <input type="file" id="UploadedFile" name="File" accept=".jpg,.jpeg,.png" />
                </form>
                <a id="emojibtn" href="#">
                    <i class="far fa-smile"></i>
                </a>
                <i class="fas fa-paper-plane" id="btn-send-message"></i>
            </div>
            <div class="emoticon-container d-none" id="emojis-container">
                <a href="#">
                    <input type="hidden" value=":)" />
                    <img src="~/images/emojis/emoji1.png" />
                </a>
                <a href="#">
                    <input type="hidden" value=":P" />
                    <img src="~/images/emojis/emoji2.png" />
                </a>
                <a href="#">
                    <input type="hidden" value=":O" />
                    <img src="~/images/emojis/emoji3.png" />
                </a>
                <a href="#">
                    <input type="hidden" value=":-)" />
                    <img src="~/images/emojis/emoji4.png" />
                </a>
                <a href="#">
                    <input type="hidden" value="B|" />
                    <img src="~/images/emojis/emoji5.png" />
                </a>
                <a href="#">
                    <input type="hidden" value=":D" />
                    <img src="~/images/emojis/emoji6.png" />
                </a>
                <a href="#">
                    <input type="hidden" value="<3" />
                    <img src="~/images/emojis/emoji7.png" />
                </a>
            </div>
        </div>
    </div>

    @* section 3 *@
    <div class="users-container">
        <div class="header">
            <h5>Who's Here (<span> 0 </span> )</h5>
        </div>

        <ul id="users-list" class="list-unstyled" data-bind="foreach: filteredChatUsers">
            <li>
                <div class="user">
                    <img src="/images/icons/avatar1.png" class="user-avatar" data-bind="attr: { src: '/images/icons' + $data.avatar() }" />
                    <div class="right-side">
                        <input type="hidden" class="username" data-bind="value: $data.userName" />
                        <span class="author" data-bind="text: $data.displayName">
                        </span>
                        <small data-bind="text: $data.device"></small>
                    </div>
                </div>
            </li>
        </ul>
        <input type="text" class="" placeholder="Search someone..." data-bind="value: filter, valueUpdate: 'afterkeydown'" />
    </div>
</div>

@* Create new room *@
<div class="modal" id="create-room-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="roomName" placeholder="Room name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click: createRoom">Create</button>
            </div>
        </div>
    </div>
</div>

@* Rename room *@
<div class="modal" id="rename-room-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rename Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="newRoomName" data-bind="value: $root.joinedRoom()">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" data-bind="click: editRoom">Update</button>
            </div>
        </div>
    </div>
</div>

@* Remove room *@
<div class="modal" id="remove-room-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Chat Room?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" data-bind="click: deleteRoom">Delete</button>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <script src="~/lib/knockout/knockout-3.5.1.js"></script>
    <script src="~/js/site.js"></script>
}